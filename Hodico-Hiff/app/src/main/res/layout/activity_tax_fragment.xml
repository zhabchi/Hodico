            android:ems="10"
            android:inputType="number" >
        </EditText>

        <TextView
            android:id="@+id/txtCarSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/spCarSymbol"
            android:layout_alignTop="@+id/spCarSymbol"
            android:layout_below="@+id/txtCarPlate"
            android:layout_marginRight="75dp"
            android:gravity="center"
            android:text="Symbol" />

        <Spinner
            android:id="@+id/spCarSymbol"
            android:layout_width="match_parent"
